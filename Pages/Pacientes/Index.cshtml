@page
@model ClinicaFisioterapia.Pages.Pacientes.IndexModel

@{
    ViewData["Title"] = "Pacientes";
}

<div class="p-4 rounded-3 mb-4" style="background-color: var(--bs-success-bg-subtle); border: 1px solid var(--bs-success-border-subtle);">
    <h1 class="mb-3" style="color: var(--bs-success-text-emphasis);">
        <i class="bi bi-people-fill me-2"></i>
        Lista de Pacientes
    </h1>
    <a asp-page="Create" class="btn btn-success mb-3">
        <i class="bi bi-person-plus"></i> Novo Paciente
    </a>
    <div class="table-responsive">
        <table class="table align-middle table-hover border rounded-3 overflow-hidden">
            <thead class="table-success">
                <tr>
                    <th><i class="bi bi-person-badge me-1"></i>@Html.DisplayNameFor(model => model.Paciente[0].Nome)</th>
                    <th><i class="bi bi-credit-card-2-front me-1"></i>@Html.DisplayNameFor(model => model.Paciente[0].CPF)</th>
                    <th><i class="bi bi-telephone me-1"></i>@Html.DisplayNameFor(model => model.Paciente[0].Telefone)</th>
                    <th><i class="bi bi-gear me-1"></i>Ações</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Paciente)
                {
                    <tr>
                        <td><i class="bi bi-person me-1"></i>@Html.DisplayFor(modelItem => item.Nome)</td>
                        <td><i class="bi bi-credit-card me-1"></i>@Html.DisplayFor(modelItem => item.CPF)</td>
                        <td><i class="bi bi-telephone me-1"></i>@Html.DisplayFor(modelItem => item.Telefone)</td>
                        <td>
                            <a asp-page="./Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning me-1">
                                <i class="bi bi-pencil-square"></i> Editar
                            </a>
                            <a asp-page="./Details" asp-route-id="@item.Id" class="btn btn-sm btn-info me-1 text-white">
                                <i class="bi bi-eye"></i> Detalhes
                            </a>
                            <a asp-page="./Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">
                                <i class="bi bi-trash"></i> Excluir
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>