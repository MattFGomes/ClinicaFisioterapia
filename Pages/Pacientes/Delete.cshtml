@page "{id}"
@model ClinicaFisioterapia.Pages.Pacientes.DeleteModel

@{
    ViewData["Title"] = "Excluir Paciente";
}

<h1>Excluir Paciente</h1>

<h3>Tem certeza que deseja excluir este paciente?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Paciente.Nome)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Paciente.Nome)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Paciente.CPF)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Paciente.CPF)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Paciente.Telefone)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Paciente.Telefone)
        </dd>
    </dl>

    <form method="post">
        <input type="hidden" asp-for="Paciente.Id" />
        <input type="submit" value="Excluir" class="btn btn-danger" />
        <a asp-page="./Index" class="btn btn-secondary">Cancelar</a>
    </form>
</div>