@page
@model IndexModel
@{
    ViewData["Title"] = "Home";
}

<div class="text-center" style="background-color: var(--bs-light); color: var(--bs-dark);">
    <h1 class="display-4" style="color: var(--bs-primary);">Bem-vindo à Clínica de Fisioterapia</h1>
    <p>Sistema de gerenciamento de pacientes e agendamentos</p>

    <div class="row mt-5">
        <div class="col-md-6">
            <div class="card" style="background-color: var(--bs-success-bg-subtle); border-color: var(--bs-success-border-subtle);">
                <div class="card-body">
                    <h5 class="card-title" style="color: var(--bs-success-text-emphasis);">Pacientes</h5>
                    <p class="card-text">Gerencie os registros de pacientes</p>
                    <a asp-page="/Pacientes/Index" class="btn btn-primary">Acessar</a>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="card" style="background-color: var(--bs-info-bg-subtle); border-color: var(--bs-info-border-subtle);">
                <div class="card-body">
                    <h5 class="card-title" style="color: var(--bs-info-text-emphasis);">Agendamentos</h5>
                    <p class="card-text">Gerencie os agendamentos de sessões</p>
                    <a asp-page="/Agendamentos/Index" class="btn btn-primary">Acessar</a>
                </div>
            </div>
        </div>
    </div>
</div>