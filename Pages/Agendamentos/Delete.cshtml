@page "{id}"
@model ClinicaFisioterapia.Pages.Agendamentos.DeleteModel

@{
    ViewData["Title"] = "Excluir Agendamento";
}

<h1>Excluir Agendamento</h1>

<h3>Tem certeza que deseja excluir este agendamento?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Paciente
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Agendamento.Paciente.Nome)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Agendamento.DataHora)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Agendamento.DataHora)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Agendamento.Procedimento)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Agendamento.Procedimento)
        </dd>
    </dl>

    <form method="post">
        <input type="hidden" asp-for="Agendamento.Id" />
        <input type="submit" value="Excluir" class="btn btn-danger" />
        <a asp-page="./Index" class="btn btn-secondary">Cancelar</a>
    </form>
</div>